# GCP設定
# プロジェクトIDを設定してください（必須）
GCP_PROJECT_ID=your-project-id

# デフォルトリージョン
GCP_REGION=asia-northeast1

# サービスアカウント名（オプション、デフォルト: keiba-prediction-sa）
SERVICE_ACCOUNT_NAME=keiba-prediction-sa

# Cloud Storage バケット名
# 実際のバケット名は ${GCP_PROJECT_ID}-${BUCKET_NAME} となります
GCS_BUCKET_RAW=keiba-raw-data
GCS_BUCKET_PROCESSED=keiba-processed-data
GCS_BUCKET_MODELS=keiba-models
GCS_BUCKET_PREDICTIONS=keiba-predictions

# BigQuery データセット
BQ_DATASET_RAW=raw
BQ_DATASET_FEATURES=features
BQ_DATASET_PREDICTIONS=predictions
BQ_DATASET_BACKTESTS=backtests

# JRDB認証情報
# JRDBのユーザー名とパスワードを設定してください
JRDB_USER=your-jrdb-user
JRDB_PASSWORD=your-jrdb-password

# 通知設定
# SendGrid APIキー（メール通知用）
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_TO_EMAIL=your-email@example.com

# LINE Notify トークン（LINE通知用）
LINE_NOTIFY_TOKEN=your-line-notify-token

# モデル設定
MODEL_VERSION=v1.0.0
PREDICTION_THRESHOLD=0.3

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
